<h1 class="align-center">All Alpha Bloggers</h1>

<div class="align-center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4 align-center">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="user-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), class: "btn btn-xs btn-danger", method: :delete,
                  data: { confirm: "This action will delete the User and all their articles. Do you want to proceed ?" }
              %>
          </li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div class="align-center">
  <%= will_paginate %>
</div>